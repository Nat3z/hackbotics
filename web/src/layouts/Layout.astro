---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-site.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
	
	body {
		background-color: #1d1d1d;
		background-image: radial-gradient(#323232 1px, transparent 1px);
		background-size: 16px 16px;
		@apply lg:h-screen;
	}

	@font-face {
		font-family: 'Inter';
		src: url(/Inter_VariableFont.ttf) format('truetype');
	}
</style>
