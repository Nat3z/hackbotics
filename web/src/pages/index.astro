---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Card from '../components/Card.astro';
import Emoji from 'astro-emoji';
import ScpShield from '../../public/favicon.png';
import HCBIcon from '../../public/hcb-icon.svg';
import GradLogo from '../../public/grad_logo.png';
---

<Layout title="Salesian Hackbotics">
	<main class="flex justify-center items-center flex-col-reverse lg:flex-row py-12 lg:p-16">
		<div class="flex flex-col justify-center lg:justify-start w-full items-center lg:items-start gap-4">
			<h1 class="font-inter font-bold text-center lg:text-left w-full mb-0 text-5xl lg:text-7xl bg-clip-text text-transparent bg-gradient-to-r from-red-500 to-orange-400">We're Salesian Hackbotics</h1>	
			<h2 class="font-inter font-medium text-center lg:text-left text-2xl lg:text-4xl w-full">
				Nerds at Salesian College Preparatory who participate in robotics competitions and run hackathons. 
			</h2>	

			<a href="https://maps.app.goo.gl/tkwmq5HzUjMA681G7" target="_blank" class="font-inter font-medium text-blue-500 border-blue-400 bg-blue-400/25 p-2 px-4 rounded-2xl">
				<Emoji symbol="ðŸ“" label="located" />
				{' '}
				2851 Salesian Ave, Richmond, CA 94804
			</a>
		</div>
		<div class="w-1/2 flex justify-center items-center pb-8 lg:pb-0">
			<Image src={ScpShield} alt="Shield" class="w-1/2 drop-shadow-xl" />
		</div>
	</main>

	<div class="flex flex-col lg:flex-row justify-center items-center gap-2 lg:gap-16 w-full pb-8">
		<Card name="Sponsor Us" image={HCBIcon} link="https://hcb.hackclub.com/donations/start/salesian-hackbotics" accent="#f87171" />
		<Card name="DynSchedule" image={GradLogo} link="https://schedule.nat3z.com" accent="#c084fc" />
	</div>

</Layout>

<style>
	main {
		@apply w-full h-5/6 text-white;
	}
</style>
